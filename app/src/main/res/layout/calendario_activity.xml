<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.calendario_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_indicaciones_calendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/indicaciones_calendario"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_explicacionCalendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/indicacionescalendario"
            />
        <CalendarView
            android:id="@+id/cal_alumno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_calendario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/black"
        app:itemIconTint="@color/bottom_nav_color_fg"
        app:itemTextColor="@color/bottom_nav_color_fg"
        app:menu="@menu/main_menu"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>