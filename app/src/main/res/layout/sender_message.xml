<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvSnUserName"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-1dp"
        android:layout_toStartOf="@+id/imgSnProfilePic"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/tvSnMessageContent"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSnSince"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/imgSnProfilePic"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvSnSince"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSnUserName"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/imgSnProfilePic"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/imgSnProfilePic"
        android:layout_width="101dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/ic_baseline_account_circle_24" />


</RelativeLayout>