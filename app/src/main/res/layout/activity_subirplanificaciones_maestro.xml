<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.subirplanificaciones_maestro">
        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="674dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subirplanifi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/subir_planificacion"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/atarraya" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/nombreplanificacion"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/tv_nombreplanif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="@string/escriba_aqu"
                    android:maxLength="50"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/materiaseleccion"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"/>

                <Spinner
                    android:id="@+id/sp_materiaplanificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/seleccionar_archivos_tareas"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"/>

                <Button
                    android:id="@+id/btn_seleccionararchivo_planif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="@string/seleccionar_archivos_tareas"
                    android:drawableStart="@drawable/ic_up"
                    android:background="@drawable/rounded_edittext_focused"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/infodel_archivo"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_infoarchivo_planif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:hint="@string/nombre_peso_y_ext"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="70dp">

                <Button
                    android:id="@+id/btn_guardarplanif"
                    android:layout_width="343dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/rounded_edittext_focused"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableStart="@drawable/ic_file"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/guardar_archivo"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>