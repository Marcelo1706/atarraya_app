<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:id="@+id/linearImagenPortada"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/descripcion"
            android:src="@drawable/imagenhome" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_textos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearImagenPortada"
        android:layout_marginTop="32dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ingreso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp">
            <TextView
                android:id="@+id/txtBienvenido"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/bienvenido"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtNombreAcceso_maestro"
                android:layout_width="252dp"
                android:layout_height="32dp"
                android:hint="Nombre del Maestro"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPalabrasBienvenida"
                android:layout_width="393dp"
                android:layout_height="198dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="232dp"
                android:gravity="center_horizontal"
                android:text="@string/versiculomaestros"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
            android:id="@+id/tv_versiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-200dp"
            android:textAlignment="center"
            android:text="Salmos 32:8"
            android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>