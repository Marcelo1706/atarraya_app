<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.reservaEquipo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20sp">

            <TextView
                android:id="@+id/tv_indicaciones_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/indicaciones_reserva"
                android:textSize="15dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EQUIPO A RESERVAR:"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textColor="@color/oscuro"/>
        <Spinner
            android:id="@+id/sp_equiporeserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_edittext_focused"/>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FECHA / HORA UTILIZACIÓN:"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textColor="@color/oscuro"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_fechaUsoequipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione una fecha "
                android:layout_margin="15dp"
                android:drawableRight="@drawable/ic_cal_black"
                android:background="@drawable/rounded_edittext"/>
            <TextView
                android:id="@+id/tv_horaUsoequipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione una hora "
                android:layout_margin="15dp"
                android:drawableRight="@drawable/ic_time_black"
                android:background="@drawable/rounded_edittext"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FECHA / HORA DEVOLUCIÓN:"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textColor="@color/oscuro"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_fechaDevequipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione una fecha "
            android:layout_margin="15dp"
            android:drawableRight="@drawable/ic_cal_black"
            android:background="@drawable/rounded_edittext"/>
        <TextView
            android:id="@+id/tv_horaDevequipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione una hora "
            android:layout_margin="15dp"
            android:drawableRight="@drawable/ic_time_black"
            android:background="@drawable/rounded_edittext"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_guardarReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_focused"
                android:backgroundTint="@color/green"
                android:text="Hacer reservación"
                android:padding="15dp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#FFFFFF"
                android:enabled="false"
                android:text="" />

            <Button
                android:id="@+id/btn_cancelarReserva"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_focused"
                android:backgroundTint="#E30D14"
                android:padding="15dp"
                android:text="Cancelar" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>