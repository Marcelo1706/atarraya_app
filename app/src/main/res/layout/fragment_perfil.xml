<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".layout.menuNavegacion"
    android:background="@color/blanco">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="parent">
        <LinearLayout
            android:id="@+id/linlay_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/actualizar_perfil"
                android:textAlignment="center"
                android:textColor="@color/oscuro"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imv_fotoperfil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_subirfoto"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_focused"
                    android:layout_gravity="center"
                    android:text="@string/boton_subirnuevafoto"
                    android:layout_margin="10dp"
                    android:onClick="onClicksubirFoto"/>

            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/linlay_opciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_nombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_de_usuario"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/edt_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:background="@drawable/rounded_edittext_focused"/>
                <TextView
                    android:id="@+id/tv_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/correo_registrado"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/edt_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_focused"
                    android:padding="5dip"
                    android:enabled="false"/>
                <TextView
                    android:id="@+id/tv_gradoactual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/grado_actual"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/edt_gradoActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_focused"
                    android:padding="5dip"
                    android:enabled="false"/>
                <TextView
                    android:id="@+id/tv_Claveactual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/contra_actual"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_ClaveActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_focused"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tv_nuevacontra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/nueva_contra"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_nuevacontra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_focused"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tv_confirmarcontra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/confirmar_contra"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_confirmarcontra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_focused"
                    android:padding="5dip" />
            </LinearLayout>
        <Button
            android:id="@+id/btn_actualizarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/atarraya"
            android:text="@string/actualizar_datos"
            android:textColor="@color/blanco" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>