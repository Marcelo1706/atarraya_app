<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/messageIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:contentDescription="This icon will be used to show the message type"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/messageUser"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="30dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/messageDescription"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/messageUser"
        android:layout_marginStart="17dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/messageIcon"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/messageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageDescription"
        android:layout_alignStart="@+id/messageDescription"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:textSize="15sp" />

</RelativeLayout>