<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/notificationIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:contentDescription="This icon will be used to show the notification type"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/notificationDescription"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/notificationTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notificationDescription"
        android:layout_alignStart="@+id/notificationDescription"
        android:layout_marginStart="0dp"
        android:textSize="15sp"
        android:layout_marginTop="1dp" />

</RelativeLayout>